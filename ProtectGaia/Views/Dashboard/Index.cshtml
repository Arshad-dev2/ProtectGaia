<!-- Main -->
<body id="page-top">
    <div id="wrapper">
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <img class="border rounded-circle img-profile" src="@Model.userModel.UserImageUrl" style="height: 8REM;margin-left: 25px;margin-top: 12px;">
                <span class="d-lg-inline mr-2 text-gray-600 small" style="margin-left: 16px;height: 25px;font-size: 26px;margin-top: 0px;padding-top: 0px;">
                    @Model.userModel.UserName
