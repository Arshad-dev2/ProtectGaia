                                                                <label class="custom-control-label" for="@Model.userModel.IsTask2Completed"> @Model.ChallengeTitle[1]</label>
                                                            </div>
                                                        }

                                                    </div>
                                                </li>


                                                <li class="list-group-item">
                                                    <div class="row align-items-center no-gutters">
