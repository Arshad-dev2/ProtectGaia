@{
    ViewBag.Title = "Home";
}
@model List<ProtectGaia.Models.Article>
<!-- Start main content -->
<!-- Corousel -->

<section id="banner">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/images/bulb1.jpg" alt="ecoMorph" style=" width: 100%;height: auto;filter: brightness(100%);opacity: 0.9;">

                <header style="position: absolute;bottom:25%;left: 50%;right:auto; padding-right: 30px; padding-left: 30px;">                    
                    <p style="color:white">Follow an interesting and eco-friendly <br/> set of tasks, to promote <br/> Greener Environment  
                    and a Healthy Living!</p>
                </header>
            </div>

            

            <div class="item">
                <img src="~/images/11_1.jpg" alt="ecoMorph" style="width:100%;height:auto;filter: brightness(90%); opacity:0.9;">
                <header style="position: absolute;bottom:25%;left: 50%;right:auto;">
                    <h2>GO GREEN TODAY.</h2>
                    <p>For a Better Future Tomorrow!</p>
             
                </header>
            </div>

            <div class="item">
                <img src="~/images/transport.png" alt="ecoMorph" style="width:100%;height:auto; filter: brightness(70%); opacity:0.9;">
                <header style="position: absolute;bottom:25%;left: 50%;right:auto;z-index:9; padding-right: 30px; padding-left: 30px;">
                    <h2>HEALTH IS WEALTH!</h2>
                    <p>Healthy life comes from Healthy Lifestyle!</p>
                   
                </header>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>








<!-- Intro -->
<section id="intro" class="container" >
    <div class="row" style="        padding-bottom: 4rem;">
        <div class="col-4 col-12-medium">
            <section class="first">
                <!--<img src="logo.jpeg" alt="ecoMorph" style="width:4rem;height:4rem;"> EcoMorph</a></h1>-->
                <i class="icon solid featured"><img src="~/images/weather.png" alt="weather" style="width:4rem;height:4rem;"></i>
                <div class="currentTemp"><h4>Current Temperature</h4><br /><h6> Updating . . .</h6></div>
            </section>         
        </div>

        <div class="col-4 col-12-medium">
            <section class="middle">
                <i class="icon solid featured alt"><img src="~/images/air_quality.png" alt="air_quality" style="width:4rem;height:4rem;"></i>
                <div class="AqiValue"><h4>Air Quality Index</h4><br /><h6> Updating . . .</h6></div>
              
            </section>
        </div>

        <div class="col-4 col-12-medium">
            <section class="last">
                <i class="icon solid featured alt2"><img src="~/images/ozone.png" alt="ozone_index" style="width:4.5rem;height:4rem;"></i>
                <div class="OzoneValue"><h4>Ozone Index</h4><br /><h6> Updating . . .</h6></div>
                @*<header>
            <h2>Ozone Index</h2>
        </header>
        <p>in LOCATION is</p>*@
            </section>
        </div>
    </div>
    <!--
    <footer>
        <ul class="actions">
            <li><a href="#" class="button large">Get Started</a></li>
            <li><a href="#" class="button alt large">Learn More</a></li>
        </ul>
    </footer>
    -->
</section>



<!-- Main -->
<section id="main" style="margin-bottom: 0px;">
    <div class="container">
        <div class="row">
            <div class="col-12">

                <!-- Portfolio -->
                <section>
                    <header class="major">
                        <h2>Explainers!</h2>
                    </header>
                    <div class="row">
                        <div class="col-4 col-6-medium col-12-small">
                            <section class="box">
                                <a href="#" class="image featured"><img src="~/images/energy_consumption.jpg" alt="EnergyConsumption" /></a>
                                <header>
                                    <h3>Energy Consumption</h3>
                                </header>
                                <p>Energy sector is the largest contributor of greenhouse gases in Australia. It accounts for more than 33 percent of total GHG emissions.</p>
                                
                                <footer>
                                    <ul class="actions">
                                        <li><a asp-controller="Explore" asp-Action="EnergyConsumption" class="button alt">Learn More</a></li>
                                    </ul>
                                </footer>
                            </section>
                        </div>
                        <div class="col-4 col-6-medium col-12-small">
                            <section class="box">
                                <a href="#" class="image featured"><img src="~/images/car-pollution.jpg" alt="transportEmissions" /></a>
                                <header>
                                    <h3>Transport Emissions</h3>
                                </header>
                                <p>Australia’s transport infrastructure is failing in terms of its carbon contribution. It is bound to get worse if we do not act now! </p>
                                
                                <footer>
                                    <ul class="actions">
                                        <li><a asp-controller="Explore" asp-Action="TransportEmissions" class="button alt">Learn More</a></li>
                                    </ul>
                                </footer>
                            </section>
                        </div>
                        <div class="col-4 col-6-medium col-12-small">
                            <section class="box">
                                <a href="#" class="image featured"><img src="~/images/household_chores.jpg" alt="householdPractices" /></a>
                                <header>
                                    <h3>Household Practices</h3>
                                </header>
                                <p>Did you know an average Australian household generates more than 7 tons of greenhouse gases which can be reduced, know how you can help! </p>
                               
                                <footer>
                                    <ul class="actions">
                                        <li><a asp-controller="Explore" asp-Action="HouseholdPractices" class="button alt">Learn More</a></li>
                                    </ul>
                                </footer>
                            </section>
                        </div>
                        <div class="col-4 col-6-medium col-12-small">
                            <section class="box">
                                <a href="#" class="image featured"><img src="~/images/climatechange.jpg" alt="climateChange" /></a>
                                <header>
                                    <h3>Climate Change</h3>
                                </header>
                                <p>Excess emissions of greenhouse gases in Australia are leading to a rapid change in our environment. It is high time that we take appropriate steps before it is too late!</p>
                                
                                <footer>
                                    <ul class="actions">
                                        <li><a asp-controller="Explore" asp-Action="ClimateChange" class="button alt">Learn More</a></li>
                                    </ul>
                                </footer>
                            </section>
                        </div>
                        <div class="col-4 col-6-medium col-12-small">
                            <section class="box">
                                <a href="#" class="image featured"><img src="~/images/health_impact.jpg" alt="HealthImpacts" /></a>
                                <header>
                                    <h3>Health Impacts</h3>
                                </header>
                                <p>It is not only our environment that is being affected, human health is in grave danger too! Understand about the health impacts of these emissions!</p>
                                <footer>
                                    <ul class="actions">
                                        <li><a asp-controller="Explore" asp-Action="HealthImpacts" class="button alt">Learn More</a></li>
                                    </ul>
                                </footer>
                            </section>
                        </div>
                        <div class="col-4 col-6-medium col-12-small">
                            <section class="box">
                                <a href="#" class="image featured"><img src="~/images/bring_change.jpg" alt="Bring_change" /></a>
                                <header>
                                    <h3>Make a Change</h3>
                                </header>
                                <p>Small effort makes a big impact and together, all of us can make a difference. Know how you can contribute towards reducing greenhouse emissions! </p>
                                <footer>
                                    <ul class="actions">
                                        <li><a asp-controller="Explore" asp-Action="MakeAChange" class="button alt">Learn More</a></li>
                                    </ul>
                                </footer>
                            </section>
                        </div>


                    </div>
                </section>
            </div>
        </div>
    </div>
</section>



<!-- Visualization -->

<section id="main" style="margin-bottom: 0px;">
    <div class="container">
        <div class="row">
            <div class="col-12">

                <section>
                    <header class="major">
                        <h2>Understand the Impact!</h2>
                        <p style="text-align:center; font-style: normal !important">
                            Watch the video below to realize which sector contributes the maximum towards greenhouse emissions in Australia.
                            You can now imagine how frightening the situation is and how unprepared we are as a country against this crisis.
                        </p>
                    </header>
                    <iframe src="https://www.youtube.com/embed/SYCv-cfJwYk" style="width:100%;height:35rem; filter: brightness(100%); opacity:0.9;">                       
                    </iframe>
                    
                </section>
            </div>
        </div>
    </div>
</section>

<!-- News Feed-->


<section id="main">
    <header class="major">
        <h2>Recent Affairs</h2>
    </header>

    <!--newsfeed-->

    <div class="container">
        <div class="row">
            @foreach (Article each in Model)
            {
                <div class="col-6 col-6-medium col-12-small" style="margin-bottom:1rem;">
                    <div class="card" style="        padding: 0.5rem 0 1rem 0;
        box-shadow: 0px 0px 14px #ededed">
                        <div class="row" style="        line-height: normal
">
                            <div class="container">
                                <div class="col-md-4 my-2">
                                    <img src=@each.ImageUrl alt="Image" style="width:85%;" />

                                </div>
                                <div class="col-md-7">
                                    <h5 style="color:black"><b>@each.Title</b></h5>
                                    <p style="color:#2fc2a2">@each.Source  - @each.PublishedDate</p>
                                    <br>
                                    <class ="actions" style="float:right" target="_blank">
                                        <a href=@each.Url class="button">Read More</a>


                                        @*<a href=@each.Url class="w3-button w3-black" style="float:right" target="_blank">Read More&nbsp;<i class="fas fa-angle-double-right"></i></a>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
        <!-- End News Content -->
    </div>
</section>





