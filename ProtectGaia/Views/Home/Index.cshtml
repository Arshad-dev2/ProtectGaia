@{
    ViewBag.Title = "Home";
}
@model List<ProtectGaia.Models.Article>
<!-- Start main content -->
<!-- Start  usout -->
    <section id="mu-about">
        
        <!--WIDGETS-->

        <div class="widget-card" style="background-color:#f5f5f5">
            <div class="row">
                <div class="col-md-4">
                    <div class="widget-container">

                        <img src="~/images/Home/weather.png" alt="Location" style="filter: brightness(70%); opacity:0.9; width: 100%; height:11.8rem" />
                        <div class="currentTemp">Current Weather<br /> <h3>Updating . . .</h3></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="widget-container">
                        <img src="~/images/Home/air_quality.jpg" alt="Location" style="filter: brightness(70%); opacity:0.9; width: 100%; height:12rem" />
                        <div class="AqiValue"><br />Air Quality Index<br /> <h3>Updating . . .</h3></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="widget-container">
                        <img src="~/images/Home/ozone.jpg" alt="Location" style="filter: brightness(70%); opacity:0.9;  width: 100%; height:12rem " />
                        <div class="OzoneValue"><br />Ozone Index<br /><h3>Updating . . .</h3></div>
                    </div>
                </div>
            </div>
        </div>


        <!--HIGHLIGHTS-->
        <div class="mu-container" style="padding:4rem 0rem 4rem 0rem;background-color:#C6E2FF">

            <!-- Title -->
            <div class="mu-title">
                <h2>Highlights</h2>
                <h4>Dig Deeper to know Better!</h4>
            </div>

            <!-- Start Feature Content -->

            <div class="container">
                <div class="row">
                    <div class="col-md-6">

                        <div class="h-card">
                            <img src="~/images/Home/satellite.png" alt="visualizations" style=" opacity:0.9; height:20rem">
                            <div class="h-container">
                                <h5> Want to know what difference did lockdown brought to the environment? </h5>
                                <a asp-controller="Explore" asp-Action="Visualization"><p style="text-align:right">Read More <i class="fas fa-angle-double-right"></i></p></a>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-6">

                        <div class="h-card">
                            <img src="~/images/Home/blogs.webp" alt="blogs" style="width: 100%;opacity:0.8;  height:20rem">
                            <div class="h-container">
                                <h5> Explore More! You Might be Interested In! </h5>
                                <br />
                                <a asp-controller="Blogs" asp-Action="Index"><p style="text-align:right">Read More <i class="fas fa-angle-double-right"></i></p></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="mu-about-area">
                        <div class="row" id="aboutus">
                            <div class="col-md-12">
                                <!-- Title -->
                                <div class="mu-title">
                                    <h2>News Feed</h2>
                                    <h4>Checkout some popular News &amp; Articles powered by NewsAPI</h4>
                                </div>
                            </div>
                        </div>
                        <!-- Start Feature Content -->
                        <div class="row">
                            @foreach (Article each in Model)
                            {
                                <div class="col-md-6" style="margin-bottom:1rem;">
                                    <div class="card" style="        padding-bottom: 1rem; height: 150px; box-shadow: 0px 0px 14px #ededed">
                                        <div class="container">
                                            <h5 style="color:black"><b>@each.Title</b></h5>
                                            <p style="color:green">@each.Source  - @each.PublishedDate</p>
                                            <a href=@each.Url class="w3-button w3-black" style="float:right" target="_blank">Read More&nbsp;<i class="fas fa-angle-double-right"></i></a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- End News Content -->
                    </div>
                </div>
            </div>
        </div>

       

    </section>
<!-- End About -->

